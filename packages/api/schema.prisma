datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  password String
}

model Company {
  id                    String     @id @default(cuid())
  name                  String     @default("")
  logo_filesize         Int?
  logo_extension        String?
  logo_width            Int?
  logo_height           Int?
  logo_mode             String?
  logo_id               String?
  from_JobOffer_company JobOffer[] @relation("JobOffer_company")
}

model JobOffer {
  id              String    @id @default(cuid())
  status          String?   @default("draft")
  company         Company?  @relation("JobOffer_company", fields: [companyId], references: [id])
  companyId       String?   @map("company")
  role            String    @default("")
  seniority       String
  mainSkills      Skill[]   @relation("JobOffer_mainSkills")
  secondarySkills Skill[]   @relation("JobOffer_secondarySkills")
  salaryMin       Int
  salaryMax       Int
  originalUrl     String    @default("")
  createdAt       DateTime? @default(now())

  @@index([companyId])
}

model Skill {
  id                            String     @id @default(cuid())
  name                          String     @default("")
  from_JobOffer_mainSkills      JobOffer[] @relation("JobOffer_mainSkills")
  from_JobOffer_secondarySkills JobOffer[] @relation("JobOffer_secondarySkills")
}